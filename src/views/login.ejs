<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./css/login.css" />
  </head>
  <body>
    <div class="main-flexbox">
      <div class="left-flexbox">
        <div class="image-container">
          <img src="./images/worm_copy.png" alt="" />
        </div>
      </div>
      <div class="right-flexbox">
        <div class="greeting">Welcome to chat-worm!</div>
        <form action="/login" method="post">
          <div>Login</div>
          <input type="text" name="username" placeholder="Username" required />
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
          <button class="sign-in-button" type="submit">Sign in</button>
        </form>
        <form style="margin: 0" action="/login" method="post">
          <input type="text" name="username" value="Demo" hidden />
          <input type="password" name="password" value="demo" required hidden />
          <button class="sign-in-button" type="submit">Demo</button>
        </form>
        <a class="signup-link" href="/signup">Create an account</a>
      </div>
    </div>
    <script src="./js/login.js"></script>
  </body>
</html>
