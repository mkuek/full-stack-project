<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./css/styles.css" />
  </head>
  <body>
    <h1>Dashboard home</h1>
    <div class="sideboard-left">
      <div>
        <button class="new-chat">New chat</button>
        <form class="new-chat-input">
          <label for="">Have an id?</label>
          <input type="text" name="room" />
          <button type="submit">submit</button>
        </form>
      </div>
      <div class="active-chats">
        <div>Active chats</div>
        <!-- unique to user -->
        <div class="Mike"></div>
        <div class="John"></div>
        <div class="Tina"></div>
      </div>
    </div>
    <div class="conversation">
      <!-- populates based on conversation selected -->
    </div>
    <div class="chat-input"></div>
    <div class="sideboard-right-bottom">
      <div class="invite">
        <div>Invite</div>
        <button class="invite-button">Invite</button>
      </div>
    </div>

    <!-- library for query string parsing - not sure when this is used yet -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
    <!-- front end (client) library for socket.io -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/home.js"></script>
  </body>
</html>
