<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./css/home.css" />
  </head>
  <body>
    <!-- <h1>Welcome </h1> -->
    <div class="container">
      <div class="successAlert">
        <div><%= success %></div>
      </div>
      <div class="left-flexbox">
        <div class="code-input box">
          <!-- <button class="new-chat">New chat</button> -->
          <form class="chat-code-input">
            <label for="">Have an id?</label>
            <input type="text" name="room" />
            <button type="submit">submit</button>
          </form>
        </div>

        <div class="user-info box">
          <!-- these will be different things, including maybe the actual user ID#, for JS to grab -->
          <div class="user-details">
            <div class="name">
              <% if (typeof currentUser=='undefined') { %>
              <div class="user-image-container">
                <img src="./images/1.jpg" alt="" class="" />
              </div>
              <div><a href="/login">Login</a></div>
              <div><a href="/register">Register</a></div>
              <% } else { %>
              <div class="user-image-container">
                <img src="<%= currentUser.pic %> " alt="" class="" />
              </div>
              <strong><%= currentUser.username %></strong>
              <div class="email"><%= currentUser.email %> <span></span></div>
              <a href="/logout">Logout</a>
              <% } %>
            </div>
          </div>
        </div>
        <div class="active-chats box">
          <div>Contacts</div>
          <!-- unique to user -->
          <% for ( let userMessages of userMessagesData) {%>
            <% for (let i=0;i<1;i++) {%> 
            <li><% if(userMessages.users[i].username==currentUser.username){ %>
              <%= userMessages.users[i+1].username %>
              <% } else { %>
                <%= userMessages.users[i].username %>
              <% } %>
            <% } %>
          <% } %>
        </div>
      </div>
      <div class="center-flexbox box">
        <div class="chat-window">
          <!-- populates based on conversation selected -->
        </div>

        <form class="chat-input">
          <input type="text" name="text" class="message-input" />
          <button type="submit" class="message-submit-button">Send</button>
        </form>
      </div>
      <div class="right-flexbox">
        <div class="logo-image box">
          <div>Worm-chat</div>
        </div>
        <div class="contact-info box">
          <!-- these will be dirrent things, including maybe the actual user ID#, for JS to grab -->
          <div class="contact-image-container">
            <img src="" alt="" class="" />
          </div>
          <div class="contact-details">
            <div class="name">Contact Name: <span></span></div>
            <div class="email">Contact Email: <span></span></div>
          </div>
        </div>
        <div class="sideboard-right-bottom box">
          <div class="invite">
            <form>
              <div class="send-email-invite">
                <div>Send email invite</div>
                <div>Recipient info</div>
                labe
                <input type="text" class="invite-name" />
                <input type="text" class="invite-email" />
              </div>
              <hr />
              <div class="copy-code">
                <div>Copy invite code</div>
                <button class="invite-button">Invite</button>
                <div>Share this code to create a new group chat</div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/home.js"></script>
  </body>
</html>
