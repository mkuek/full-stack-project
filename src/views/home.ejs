<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="./css/home.css" />
  </head>
  <body>
    <!-- <h1>Welcome </h1> -->
    <div class="container">
      <!-- <div class="loginSuccessful"><%= success %></div> -->
      <div class="left-flexbox">
        <div class="code-input box">
          <form class="code-input-form">
            <div class="chat-bubble-flex">
              <img src="./images/speech_bubble.png" alt="" />
              <div>Start new chat</div>
            </div>
            <div class="code-submit-dropdown">
              <input
                class="chat-code-input"
                value="0"
                type="text"
                name="room"
              />
              <button type="submit">submit</button>
            </div>
          </form>
        </div>
        <div class="user-info box">
          <div class="user-details">
            <div class="name">
              <% if (typeof currentUser=='undefined') { %>
              <div class="user-image-container">
                <img src="./images/1.jpg" alt="" class="" />
              </div>
              <div><a href="/login">Login</a></div>
              <div><a href="/register">Register</a></div>
              <% } else { %>
              <div class="user-image-container">
                <img src="<%= currentUser.pic %> " alt="" class="" />
              </div>
              <div class="user-name-flex">
                <img class="user-icon" src="./images/person_icon.png" alt="" />
                <div><%= currentUser.username %></div>
              </div>
              <div class="user-email-flex">
                <img class="envelope" src="./images/envelope.png" alt="" />
                <div class="email"><%= currentUser.email %></div>
              </div>
              <div class="logout"><a href="/logout">Logout</a></div>

              <% } %>
            </div>
          </div>
        </div>
        <div class="active-chats">
          <div>Contacts</div>
          <!-- unique to user -->
          <!-- unique to user -->
          <% for ( let userMessages of userMessagesData) {%> <% for (let
          i=0;i<1;i++) {%> <%
          if(userMessages.users[i].username==currentUser.username){ %>
          <li class="hidden-roomId"><%= userMessages.users[i+1].username %></li>
          <% } else if( userMessages.users[i+1].username ==
          currentUser.username) {%>
          <li class="hidden-roomId"><%= userMessages.users[i].username %></li>
          <% } else { %> <% i++ %> <% } %> <% } %> <% } %>
        </div>
        <!-- <div class="logo-image box">
          <div>Worm-chat</div>
        </div> -->
      </div>

      <div class="center-flexbox box">
        <div class="chat-window">
          <!-- populates based on conversation selected -->
        </div>

        <form class="chat-input">
          <input type="text" name="text" class="message-input" />
          <button type="submit" class="message-submit-button">Send</button>
        </form>
      </div>
      <div class="right-flexbox">
        <div class="contact-info box">
          <!-- these will be dirrent things, including maybe the actual user ID#, for JS to grab -->
          <div class="contact-details">
            <div class="contact-image-container">
              <img src="<%= currentUser.pic %> " alt="" class="" />
            </div>
            <div class="contact-name-flex">
              <img class="user-icon" src="./images/person_icon.png" alt="" />
              <div><%= currentUser.username %></div>
            </div>
            <div class="contact-email-flex">
              <img class="envelope" src="./images/envelope.png" alt="" />
              <div class="email"><%= currentUser.email %></div>
            </div>
          </div>
        </div>

        <div class="sideboard-right-bottom box">
          <div class="invite">
            <form>
              <div class="copy-code">
                <div class="copy-code-headline">Copy invite code</div>
                <button class="invite-button">
                  <img src="./images/link_white.png" alt="" />
                </button>
                <p>Share this code to create a new group chat</p>
                <img src="./images/paper_airplane.png" alt="" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/home.js"></script>
  </body>
</html>
